
<div class = "row">
                <div class="card">
                    <h5 class="card-header">{{title}}</h5>
                    <div class="card-body">
                      <p class="card-text">{{body}}</p>

                    </div>
                    <div class="card-footer text-muted">
                        Posted by {{user.username}} on {{createdAt}}
                      </div>
                  </div>
            </div>
            <div class = "row">
                <form id="comment-form">
                    <textarea id="comment-text" data-blogId="{{id}}"></textarea>
                    <button class="btn btn-primary" id="comment-submit">Submit Comment</button>
                </form>
                <script src="/js/comment.js"></script>
            </div>
            {{#each Comments as |comment|}}
            <div class = "row">
                <div class="card">
                    <div class="card-body">
                      <p class="card-text">{{body}}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Posted by {{user.username}} on {{createdAt}}
                      </div>
                  </div>
            </div>
            {{/each}}
